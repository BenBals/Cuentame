{
  "name": "Cuentame",
  "version": "0.1.0",
  "description": "just me trying to get this up and running using webpack",
  "main": "build/server/server.bundle.js",
  "scripts": {
    "build": "webpack --config webpack.config.server.js & webpack --config webpack.config.client.js",
    "dev": "webpack --config webpack.config.server.js --watch & webpack --config webpack.config.client.js --watch",
    "dev-server": "nodemon build/server/server.bundle.js",
    "lint": "eslint . --ext .js --ext .jsx",
    "test": "jest",
    "start": "node build/server/server.bundle.js"
  },
  "author": "Ben Bals",
  "license": "MIT",
  "dependencies": {
    "express": "^4.10.2",
    "google-map-react": "^0.9.3",
    "lodash": "^3.10.1",
    "marked": "^0.3.5",
    "react": "^0.14.5",
    "react-dom": "^0.14.5",
    "reactify": "^1.1.1",
    "redux": "^3.0.5",
    "socket.io": "^1.4.3",
    "socket.io-client": "^1.4.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-eslint": "^5.0.0-beta6",
    "babel-jest": "^6.0.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-react": "^3.13.1",
    "html-webpack-plugin": "^1.7.0",
    "http-server": "^0.8.5",
    "jsx-loader": "^0.13.2",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.0",
    "precss": "^1.4.0",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "new-cap": 0,
      "strict": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ],
      "jsx-quotes": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1
    }
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
